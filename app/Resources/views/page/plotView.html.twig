{% extends 'base.html.twig' %}

{% block pageTitle %}
	View Spot
{% endblock %}

{% block body %}
<nav class="navbar navbar-default" role="navigation">
	<div class="navbar-header">
		<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</button>
		<a class="navbar-brand" href="#">Fluffy Doodle</a>
	</div>
	<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		<ul class="nav navbar-nav">
			<li><a href="/map">Map</a></li>
			<li><a href="#">Register</a></li>
		</ul>
		<div class="col-sm-3 col-md-3 pull-right">
			<form class="navbar-form" id="search-form" role="search">
				<div class="input-group">
					<input type="text" class="form-control" placeholder="Search" name="search-term" id="search-term">
					<div class="input-group-btn">
						<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
					</div>
				</div>
			</form>
		</div>		
	</div>
</nav>

<div class="container">

	<div id="plot-header" data-lng="{{ lng }}" data-lat="{{ lat }}">
		<h1>{{ name }}</h1>		
	</div>
	<div id="plot-note">
		{{ note }}
	</div>
	<div id="plot-tags">
		{% for tag in tags %}
			<a href="/view/tag/{{ tag.id }}"><span class="label label-primary"># {{ tag.name }}</span></a>
		{% endfor %}
	</div>
	<div id="plot-image">
		{% if pictures %}
			<img class="img-plot img-responsive" src="/uploads/pictures/{{ pictures[0] }}"/>
		{% endif %}
	</div>
	<div id="gallery">
		<ul id="lightSlider">
			{% for picture in pictures %}
				<li>
					<img class="thumbnail" data-path="/uploads/pictures/{{ picture }}" src="/uploads/pictures/thumbs/{{ picture }}.png" />
				</li>
			{% endfor %}
		</ul>
	</div>
	<div id="map-plot">

	</div>
	<div id="user-content">

	</div>
</div>	
{% endblock %}

{% block head %}
	{{ parent() }}

	{# LEAFLET #}
	<link rel="stylesheet" href="{{ asset('css/leaflet.css') }}" />
	
	{# PLOTVIEW #}
	<link rel="stylesheet" href="{{ asset('css/plotview.css') }}" />
	<link type="text/css" rel="stylesheet" href="{{ asset('css/lightslider.min.css') }}" />
{% endblock %}

{% block footerScripts %}
	{# LEAFLET #}
	<script type="text/javascript" src="{{ asset('js/leaflet.js') }}"></script>
	{# JS #}
	<script type="text/javascript" src="{{ asset('js/plotview.js') }}"></script>
	
	<script type="text/javascript" src="{{ asset('js/lightslider.min.js') }}"></script>
{% endblock %}
